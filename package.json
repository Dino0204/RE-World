{
  "name": "re-world",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "build:shared": "cd shared && tsc -b",
    "dev:client": "cd client && bun dev",
    "dev:server": "cd server && bun dev",
    "dev": "concurrently 'bun run dev:client' 'bun run dev:server'",
    "lint:client": "cd client && bun lint",
    "lint:server": "cd server && bun lint",
    "lint": "concurrently 'bun run lint:client' 'bun run lint:server'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@elysiajs/eden": "^1.4.6",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "elysia": "^1.4.22"
  }
}
