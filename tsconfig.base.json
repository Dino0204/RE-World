{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./server/src/*"],
      "@client/*": ["./client/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
